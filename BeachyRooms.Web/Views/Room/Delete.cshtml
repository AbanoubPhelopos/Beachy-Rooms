@model BeachyRooms.Domain.Entities.Room

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-4xl mx-auto bg-white rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <!-- Card Header -->
        <div class="flex items-center gap-3 px-8 py-6 border-b">
            <div class="relative w-9 h-9">
                <div class="absolute w-6 h-4 bg-teal-400 rounded-t-full transform -rotate-45 -translate-x-1.5 translate-y-1.5 overflow-hidden animate-wave-move"></div>
                <div class="absolute top-[3px] left-[15.5px] w-[9.5px] h-[9.5px] rounded-full bg-gradient-to-br from-yellow-400 via-yellow-300 to-yellow-500 shadow-md animate-sun-pulse"></div>
                <span class="absolute top-0 left-[2.5px] text-[22.5px] font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-200 to-orange-500 animate-gradient-text">B</span>
            </div>
            <div>
                <p class="text-2xl font-semibold">Beachy Rooms</p>
                <p class="text-sm text-red-500">Delete Room</p>
            </div>
        </div>
        <!-- Divider -->
        <hr />
        <!-- Card Body -->
        <form method="post" class="flex flex-col gap-6 p-8">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <p class="text-lg font-semibold text-red-600">Are you sure you want to delete this room?</p>
            <!-- Hotel Name -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.HotelName)</label>
                <p class="mt-1 block w-full rounded-md bg-gray-100 p-2">@Model.HotelName</p>
            </div>

            <!-- Room Number -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.RoomNumber)</label>
                <p class="mt-1 block w-full rounded-md bg-gray-100 p-2">@Model.RoomNumber</p>
            </div>

            <!-- Country -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.Country)</label>
                <p class="mt-1 block w-full rounded-md bg-gray-100 p-2">@Model.Country</p>
            </div>

            <!-- Governorate -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.City)</label>
                <p class="mt-1 block w-full rounded-md bg-gray-100 p-2">@Model.City</p>
            </div>

            <!-- Description -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.Description)</label>
                <p class="mt-1 block w-full rounded-md bg-gray-100 p-2">@Model.Description</p>
            </div>

            <!-- Price -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.Price)</label>
                <p class="mt-1 block w-full rounded-md bg-gray-100 p-2">$@Model.Price</p>
            </div>

            <!-- Square Feet -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.Sqft)</label>
                <p class="mt-1 block w-full rounded-md bg-gray-100 p-2">@Model.Sqft</p>
            </div>

            <!-- Occupancy -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.Occupancy)</label>
                <p class="mt-1 block w-full rounded-md bg-gray-100 p-2">@Model.Occupancy</p>
            </div>

            <!-- Image -->
            <div>
                <label class="block text-sm font-medium text-gray-700">@Html.DisplayNameFor(model => model.ImageUrl)</label>
            </div>

            <!-- Buttons -->
            <div class="flex gap-4 mt-6">
                <button type="submit" class="flex-1 inline-flex justify-center items-center px-6 py-3 bg-blue-600 border border-transparent rounded-md font-semibold text-white hover:bg-red-700 transition-colors duration-200 focus:outline-none focus:ring focus:ring-blue-200 hover:scale-105">
                    Delete
                </button>
                <a asp-controller="Room" asp-action="Index" class="flex-1 inline-flex justify-center items-center px-6 py-3 bg-gray-600 border border-transparent rounded-md font-semibold text-white hover:bg-gray-700 transition-colors duration-200 focus:outline-none focus:ring focus:ring-gray-200 text-center hover:scale-105">
                    Cancel
                </a>
            </div>
        </form>
        <!-- Divider -->
        <hr />
        <!-- Card Footer -->
        <div class="px-8 py-6 text-center text-sm text-gray-500">
            &copy; 2023 BeachyRooms. All rights reserved.
        </div>
    </div>
</div>